########################################
# Core Server Configuration
########################################
# Runtime mode: use "production" in deployed environments
NODE_ENV=development
# HTTP port for the Express server
PORT=3090
# MongoDB connection string (e.g. Atlas URI or local instance)
MONGODB_URI=mongodb://localhost:27017/recruita

########################################
# Authentication & JWT
########################################
# Generate with: openssl rand -base64 48  (must be >= 32 characters)
JWT_ACCESS_SECRET=replace_with_min_32_char_secret_value
# Human-friendly JWT access token lifetime
JWT_ACCESS_EXPIRE=15m

########################################
# HTTPS & Routing
########################################
# Enable (true) when TLS is terminated upstream (e.g. behind a load balancer)
ENFORCE_HTTPS=false
# Match your hosting proxy setting (number of hops, IP, or true/false)
TRUST_PROXY=false
# Versioned API prefix exposed by the backend
API_PREFIX=/api/v1
# Base URL of the frontend allowed to call the API
CORS_ORIGIN=http://localhost:5173


########################################
# AI Service Configuration
########################################
# Base URL of the AI microservice handling matching/scoring
AI_SERVICE_URL=http://localhost:8000
# HTTP timeout (milliseconds) for outbound AI requests
AI_SERVICE_TIMEOUT_MS=60000
# Retry configuration for AI calls
AI_SERVICE_MAX_RETRIES=2
AI_SERVICE_RETRY_DELAY_MS=200
AI_SERVICE_RETRY_MULTIPLIER=2
AI_SERVICE_MAX_BACKOFF_MS=2000
# Cache configuration for AI responses
AI_SERVICE_CACHE_TTL_MS=900000
AI_SERVICE_CACHE_MAX_ENTRIES=500
# Matching algorithm limits
AI_MATCH_BATCH_SIZE=10
AI_MATCH_MAX_JOBS=50
AI_MATCH_MAX_GRADUATES=50

########################################
# Client URLs
########################################
# Public URL of the frontend used in email links and redirects
CLIENT_URL=http://localhost:5173
# Fallback application URL (used when CLIENT_URL is not set)
APP_URL=http://localhost:5173
